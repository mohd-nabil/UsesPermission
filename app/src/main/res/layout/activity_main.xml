<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mjm.usespermission.SampleActivity"
    android:scrollbars="none"
    android:fillViewport="true"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <Button
            android:id="@+id/singlePermissionBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="singlePermission"
            android:text="Single Permission"/>

        <Button
            android:id="@+id/arrayPermissionsBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="arrayPermissions"
            android:text="Array Of Permissions"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/listPermissionsBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="listPermissions"
            android:text="List Of Permissions"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/verifySinglePermissionBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="verifySinglePermission"
            android:text="Verify Single Permission"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/verifyListOfPermissionsBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="verifyListOfPermissions"
            android:text="Verify List Of Permissions"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/verifyArrayOfPermissionsBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="verifyArrayOfPermissions"
            android:text="Verify Array Of Permissions"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/forceFullPermissionBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="forceFullPermission"
            android:text="Force Full Permission"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</ScrollView>
